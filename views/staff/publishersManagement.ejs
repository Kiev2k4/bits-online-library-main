<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Librarian - Publishers Management</title>
		<link rel="icon" type="image/x-icon" href="/public/assets/icon1.svg" />

		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
			crossorigin="anonymous"
		/>
		<script src="https://kit.fontawesome.com/090ced38b4.js" crossorigin="anonymous"></script>

		<link rel="stylesheet" href="/public/css/staff_global.css" />
		<link rel="stylesheet" href="/public/css/publishersManagement.css" />
	</head>
	<body>
		<!--Add Modal-->
		<div
			class="modal fade"
			id="addPublisher"
			tabindex="-1"
			aria-labelledby="addPublisherLabel"
			aria-hidden="true"
		>
			<div class="modal-dialog modal-dialog-centered">
				<div class="modal-content">
					<div class="modal-header">
						<h1 class="modal-title fs-5" id="addPublisherLabel">Add a publisher</h1>
						<button
							type="button"
							class="btn-close"
							data-bs-dismiss="modal"
							aria-label="Close"
						></button>
					</div>
					<form id="addPublisherForm" class="modal-body">
						<div class="mb-3 row">
							<label for="inputPublisherName" class="col-sm-4 col-form-label">
								Publisher Name:
							</label>
							<div class="col-sm-8">
								<input type="text" class="form-control" id="inputPublisherName" />
							</div>
						</div>
						<div class="mb-3 row">
							<label for="inputPublisherContact" class="col-sm-4 col-form-label">
								Publisher Contact:
							</label>
							<div class="col-sm-8">
								<input type="text" class="form-control" id="inputPublisherContact" />
							</div>
						</div>
						<div class="mb-3 row">
							<label for="inputPublisherAddress" class="col-sm-4 col-form-label">
								Publisher Address:
							</label>
							<div class="col-sm-8">
								<input type="text" class="form-control" id="inputPublisherAddress" />
							</div>
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
							<button type="submit" class="btn btn-primary">Save changes</button>
						</div>
					</form>
				</div>
			</div>
		</div>
		<!--End of Add Modal-->
		<!--Edit Modal-->
		<div
			class="modal fade"
			id="editPublisher"
			tabindex="-1"
			aria-labelledby="editPublisherLabel"
			aria-hidden="true"
		>
			<div class="modal-dialog modal-dialog-centered">
				<div class="modal-content">
					<div class="modal-header">
						<h1 class="modal-title fs-5" id="editPublisherLabel">Edit publisher</h1>
						<button
							type="button"
							class="btn-close"
							data-bs-dismiss="modal"
							aria-label="Close"
						></button>
					</div>
					<form id="editPublisherForm" class="modal-body">
						<div class="mb-3 row">
							<label for="editPublisherName" class="col-sm-4 col-form-label">
								Publisher Name:
							</label>
							<div class="col-sm-8">
								<input type="text" class="form-control" id="editPublisherName" />
							</div>
						</div>
						<div class="mb-3 row">
							<label for="editPublisherContact" class="col-sm-4 col-form-label">
								Publisher Contact:
							</label>
							<div class="col-sm-8">
								<input type="text" class="form-control" id="editPublisherContact" />
							</div>
						</div>
						<div class="mb-3 row">
							<label for="editPublisherAddress" class="col-sm-4 col-form-label">
								Publisher Address:
							</label>
							<div class="col-sm-8">
								<input type="text" class="form-control" id="editPublisherAddress" />
							</div>
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
							<button type="submit" class="btn btn-primary">Save changes</button>
						</div>
					</form>
				</div>
			</div>
		</div>
		<!--End of Edit Modal-->
		<!--Delete Modal-->
		<div
			class="modal"
			id="deletePublisher"
			tabindex="-1"
			aria-labelledby="deletePublisherLabel"
			aria-hidden="true"
		>
			<div class="modal-dialog modal-dialog-centered">
				<div class="modal-content">
					<div class="modal-header">
						<h5 class="modal-title">Delete publisher</h5>
						<button
							type="button"
							class="btn-close"
							data-bs-dismiss="modal"
							aria-label="Close"
						></button>
					</div>
					<form id="deletePublisherForm" class="modal-body">
						<p>Are you sure you want to delete this publisher ?</p>
						<div class="modal-footer">
							<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
							<button type="submit" class="btn btn-danger">Confirm</button>
						</div>
					</form>
				</div>
			</div>
		</div>
		<!--End of Delete Modal-->
		<%- include('./components/staff_header.ejs') %>
		<div class="div-6">
			<div class="container-xxl d-flex align-items-center gap-2">
				<a class="breadCrumbs" href="/admin/books"><i class="fa-solid fa-house"></i></a>
				<div><a class="breadCrumbs" href="/admin/books">Home</a></div>
				<i class="fa-solid fa-chevron-right text-secondary"></i>
				<div class="text-secondary">Publishers Management</div>
			</div>
		</div>
		<div class="container-xxl my-5">
			<div class="row">
				<nav class="col-3"><%- include('./components/staff_navbar.ejs') %></nav>
				<div class="col-9">
					<div class="div-21">
						<div class="div-22">Manage Publishers</div>
						<div class="div-23">
							<form id="searchForm" class="input-group searchBarTable">
								<input
									type="text"
									id="searchInput"
									class="form-control"
									placeholder="Search for publishers name..."
									aria-label="Search"
									aria-describedby="basic-addon1"
								/>
								<button title="Search" type="submit" class="input-group-text" id="searchBarButton">
									<i class="fa-solid fa-magnifying-glass"></i>
								</button>
							</form>
							<select
								name="sort-select"
								id="sort-select"
								class="form-select w-auto"
								aria-label="Sort by"
							>
								<option selected>Sort by:</option>
								<option value="0">Alphabet</option>
								<option value="1">Latest</option>
								<option value="2">Oldest</option>
							</select>
							<button
								type="button"
								class="btn btn-outline-secondary d-flex gap-2 text-nowrap align-items-center"
								data-bs-toggle="modal"
								data-bs-target="#addPublisher"
							>
								<i class="fa-solid fa-plus"></i>
								NEW PUBLISHER
							</button>
						</div>
						<table class="table table-hover table-responsive">
							<thead>
								<tr>
									<th scope="col">Name</th>
									<th scope="col">Address</th>
									<th scope="col">Contact</th>
									<th scope="col">Action</th>
								</tr>
							</thead>
							<tbody>
								<% publishers.forEach(function(publisher) { %>
								<tr>
									<td><%= publisher.name %></td>
									<td><%= publisher.address %></td>
									<td><%= publisher.contact %></td>
									<td>
										<button
											class="deleteButton bg-transparent border-0"
											data-publisher-id="<%= publisher.id %>"
											data-bs-toggle="modal"
											data-bs-target="#deletePublisher"
										>
											<i class="fa-solid fa-trash"></i>
										</button>
										<button
											class="editButton bg-transparent border-0"
											data-publisher-id="<%= publisher.id %>"
											data-publisher-name="<%= publisher.name %>"
											data-publisher-address="<%= publisher.address %>"
											data-publisher-contact="<%= publisher.contact %>"
											data-bs-toggle="modal"
											data-bs-target="#editPublisher"
										>
											<i class="fa-solid fa-pen-to-square"></i>
										</button>
									</td>
								</tr>
								<% }) %>
							</tbody>
						</table>
						<%- include('../customer/components/pagination.ejs', { totalItems, totalPages,
						currentPage }) %>
					</div>
				</div>
			</div>
		</div>
		<script
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
			crossorigin="anonymous"
		></script>
		<script src="/public/js/publishersManagement.js"></script>
	</body>
</html>
